{
  "name": "image-caption-manager",
  "displayName": "Image Caption Manager",
  "description": "VSCode extension to manage image-caption pairs for AI datasets",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "imageCaptionManager.open",
        "title": "Open Image Caption Manager",
        "category": "Image Caption Manager",
        "icon": "$(image)"
      },
      {
        "command": "imageCaptionManager.refresh",
        "title": "Refresh Image Caption Pairs",
        "category": "Image Caption Manager",
        "icon": "$(refresh)"
      },
      {
        "command": "imageCaptionManager.next",
        "title": "Next Image Caption Pair",
        "category": "Image Caption Manager"
      },
      {
        "command": "imageCaptionManager.previous",
        "title": "Previous Image Caption Pair",
        "category": "Image Caption Manager"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "imageCaptionManager.open",
          "when": "explorerResourceIsFolder",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        {
          "command": "imageCaptionManager.open",
          "when": "workbenchState != empty"
        },
        {
          "command": "imageCaptionManager.refresh",
          "when": "workbenchState != empty"
        },
        {
          "command": "imageCaptionManager.next",
          "when": "workbenchState != empty"
        },
        {
          "command": "imageCaptionManager.previous",
          "when": "workbenchState != empty"
        }
      ]
    },
    "keybindings": [
      {
        "command": "imageCaptionManager.open",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "workbenchState != empty"
      },
      {
        "command": "imageCaptionManager.next",
        "key": "ctrl+alt+right",
        "mac": "cmd+alt+right",
        "when": "workbenchState != empty"
      },
      {
        "command": "imageCaptionManager.previous",
        "key": "ctrl+alt+left",
        "mac": "cmd+alt+left",
        "when": "workbenchState != empty"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
